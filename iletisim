    <script>

        function Kontrol()
        {
            var d1 = document.getElementById('1').value;

            let kontrol = /^[a-zA-Z0-9]+@[a-zA-Z0-9]+\.[a-zA-Z]{2,4}$/;
            if(d1.match(kontrol))
            {
                document.write('succesfull');
            }
        }
        function kontrol()
        {
            let A = 0;
            let x = document.getElementById("1").value;
            if ( x.indexOf("@") == -1 && A != 1)
            {
                window.alert("Lütfen geçerli bir e posta adresi giriniz");
                A = 1;
            }
            let K = /^.+\s+.$/;
            x = document.getElementById('2').value;
            if( !K.test(x) && A != 1)
            {
                window.alert("Lütfen geçerli bir ad soyad giriniz");
                A = 1;
            }
            K = /^.$/;
            x = document.getElementById('3').value;
            if( !K.test(x) && A != 1)
            {
                window.alert("Lütfen geçerli bir adres giriniz");
                A = 1;
            }
            x = document.getElementById('5').value;
            if( !K.test(x) && A != 1)
            {
                window.alert("Lütfen robot olmadığınızı kanıtlayınız");
                A = 1;
            }
            x = document.getElementById('6').value;
            if( !K.test(x) && A != 1)
            {
                window.alert("Lütfen cinsiyet seçiniz");
                A = 1;
            }


        }

    </script>

